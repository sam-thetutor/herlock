{
  "version": 1,
  "canisters": {
    "basic_bitcoin": {
      "main": "src/basic_bitcoin/src/Main.mo",
      "type": "motoko",
      "init_arg": "(variant { regtest })"
    },
    "heirlock": {
      "main": "src/heirlock/src/Main.mo",
      "type": "motoko",
      "init_arg": "(variant { regtest })"
    },
    "internet_identity": {
      "type": "custom",
      "candid": "internet_identity.did",
      "wasm": "internet_identity.wasm"
    }
  },
  "defaults": {
    "bitcoin": {
      "enabled": true,
      "nodes": [
        "127.0.0.1:18444"
      ],
      "log_level": "info"
    },
    "build": {
      "packtool": "mops sources",
      "args": ""
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943"
    }
  }
}